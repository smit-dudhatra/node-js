extends layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/product.css")

block content 
        main
            .grid
                if prods.length > 0
                    each product  in prods 
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title}
                            
                            .card__image
                                img(src="https://img.freepik.com/free-photo/book-composition-with-open-book_23-2147690555.jpg?t=st=1714818576~exp=1714822176~hmac=273e9d92070cc224d9e1131c296274d1b0a12d47de067cf89d6e9759a6b526ac&w=996" ,alt="A Book")
                            
                            .card__content
                                h2.product__price $19.99
                                p.product__description A very interesting book about so many even more interesting things! 
                            
                            .card__actions
                                button.btn Add to Cart
                else 
                    h1 No Products            
                        
                



